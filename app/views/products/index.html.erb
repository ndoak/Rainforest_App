  <% @products.each do |product| %>
    <div class="product_item">
      <%= product.name %>
    </div>
    <div class="product_item">
      <%= product.description %>
    </div>
    <div class="product_item">
      <%= product.formatted_price %>
    </div>
      <%= link_to "Show Product", product_path(product) %>
  <% end %>
